{
  "manifest_version": 3,
  "name": "TriAuto des Téléchargements",
  "version": "1.2",
  "description": "Classe automatiquement les fichiers téléchargés par type avec une interface moderne et des options avancées.",
  "permissions": [
    "downloads",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "file://*/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "TriAuto",
    "default_popup": "popup.html"
  }
}